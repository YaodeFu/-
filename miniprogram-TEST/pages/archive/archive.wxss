page { background-color: #f7f9fc; }
.container { padding: 30rpx; }

/* 二维码卡片样式 */
.qr-card {
  background: #ffffff; border-radius: 40rpx; padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 106, 106, 0.05); margin-bottom: 50rpx;
  text-align: center;
}
.qr-header { font-size: 32rpx; font-weight: bold; color: #006a6a; margin-bottom: 30rpx; }

.qr-btn-placeholder {
  width: 300rpx; height: 300rpx; background: #f0f7f7; border-radius: 30rpx;
  margin: 0 auto; display: flex; flex-direction: column; justify-content: center; align-items: center;
  border: 2rpx dashed #006a6a;
}
.qr-action-btn { background: #006a6a; color: #fff; padding: 12rpx 30rpx; border-radius: 50rpx; font-size: 24rpx; margin-bottom: 10rpx; }
.qr-safety-tip { font-size: 20rpx; color: #99a; }
.qr-code-img { width: 300rpx; height: 300rpx; }

.copy-box {
  margin-top: 30rpx; background: #f8f8f8; padding: 15rpx 25rpx; border-radius: 12rpx;
  display: flex; justify-content: space-between; align-items: center;
}
.id-text { font-size: 20rpx; color: #666; font-family: monospace; }
.copy-tag { font-size: 22rpx; color: #006a6a; font-weight: bold; }

/* 档案记录卡片 */
.section-title { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 25rpx; padding-left: 10rpx; }
.history-card {
  background: #fff; border-radius: 30rpx; padding: 30rpx; margin-bottom: 20rpx;
  display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.02);
}
/* 修改原来的 .type-badge，并增加颜色类 */
.type-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

/* 风险等级：高 - 红色系 */
.type-badge.high {
  background: #fff1f0; /* 极浅红底 */
  color: #f5222d;      /* 鲜红字 */
  border: 1rpx solid #ffa39e;
}

/* 风险等级：中 - 黄色系/橙色系 */
.type-badge.medium {
  background: #fffbe6; /* 极浅黄底 */
  color: #faad14;      /* 琥珀黄字 */
  border: 1rpx solid #ffe58f;
}

/* 风险等级：低/健康 - 绿色系 */
.type-badge.low {
  background: #f6ffed; /* 极浅绿底 */
  color: #52c41a;      /* 翠绿字 */
  border: 1rpx solid #b7eb8f;
}

/* 如果没有风险等级字段的默认样式 */
.type-badge:not(.high):not(.medium):not(.low) {
  background: #f0f7f7;
  color: #006a6a;
}
.time-label { font-size: 22rpx; color: #999; margin-top: 10rpx; }
.card-right { flex: 1; text-align: right; margin-left: 30rpx; display: flex; align-items: center; justify-content: flex-end; }
.advice-preview { font-size: 24rpx; color: #666; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 300rpx; }
.detail-arrow { color: #ccc; margin-left: 15rpx; font-weight: bold; }