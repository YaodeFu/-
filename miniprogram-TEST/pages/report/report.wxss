/* pages/report/report.wxss */
page { background-color: #f4f1ea; } 

.report-header-bg {
  height: 300rpx;
  background: linear-gradient(180deg, #006a6a 0%, #f4f1ea 100%);
  position: absolute;
  top: 0; left: 0; right: 0; z-index: 1;
}

.main-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  margin-top: 60rpx;
}

.report-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  border: 1rpx solid #dcd7c9;
  position: relative;
}

.report-title { text-align: center; }
.title-txt { font-size: 44rpx; font-weight: bold; color: #333; letter-spacing: 4rpx; }

.seal {
  position: absolute; right: 40rpx; top: 40rpx;
  width: 100rpx; height: 100rpx;
  border: 4rpx solid #cf4646; color: #cf4646;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 20rpx; font-weight: bold; transform: rotate(-15deg);
  opacity: 0.8;
}

.report-divider {
  height: 2rpx; background: #eee; margin: 40rpx 0;
}

.result-section { text-align: center; margin-bottom: 80rpx; }
.section-label { font-size: 26rpx; color: #888; margin-bottom: 20rpx; display: block; }

.type-name {
  font-size: 72rpx; font-weight: 900; color: #006a6a; display: block;
}

.risk-indicator {
  display: inline-block; margin-top: 24rpx;
  padding: 8rpx 32rpx; border-radius: 40rpx; font-size: 24rpx; font-weight: bold;
}

/* 状态颜色修复 */
.risk-indicator.high { background: #fff1f0; color: #f5222d; border: 1rpx solid #ffa39e; }
.risk-indicator.medium { background: #fffbe6; color: #faad14; border: 1rpx solid #ffe58f; }
.risk-indicator.low { background: #f6ffed; color: #52c41a; border: 1rpx solid #b7eb8f; }

.advice-section {
  background: #faf8f2; padding: 40rpx; border-radius: 12rpx;
  border-left: 8rpx solid #006a6a; margin-bottom: 60rpx;
}

.advice-header {
  display: flex; align-items: center; font-weight: bold;
  color: #006a6a; margin-bottom: 20rpx; font-size: 32rpx;
}
.advice-icon { margin-right: 15rpx; }
.advice-text { font-size: 30rpx; color: #444; line-height: 1.8; text-align: justify; }

.footer-info {
  border-top: 1rpx dashed #ddd; padding-top: 30rpx;
  display: flex; flex-direction: column; align-items: center;
}
.footer-info text { font-size: 22rpx; color: #aaa; margin-bottom: 10rpx; }

.action-bar { margin-top: 60rpx; }
.back-btn {
  background: #006a6a; color: white; border-radius: 50rpx;
  font-size: 30rpx; padding: 10rpx 0;
}