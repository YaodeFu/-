<view class="container">
  <block wx:if="{{isLogin}}">
    <view class="user-profile-card">
      <view class="avatar-area">🌿</view>
      <view class="user-info">
        <text class="name">岐黄用户</text>
        <view class="id-full-box">
          <text class="id-label">业务识别码 (OpenID):</text>
          <text class="id-value">{{fullOpenId}}</text>
        </view>
      </view>
    </view>

    <view class="stats-card">
      <view class="stats-item" bindtap="navToArchive" hover-class="item-hover">
        <text class="stats-num">{{recordCount}}</text>
        <text class="stats-label">检测记录</text>
      </view>
      <view class="stats-divider"></view>
      <view class="stats-item" bindtap="navToRemind" hover-class="item-hover">
        <text class="stats-num">{{familyCount}}</text>
        <text class="stats-label">关联家人</text>
      </view>
    </view>

    <view class="menu-list">
      <view class="menu-item" bindtap="navToAbout" hover-class="item-hover">
        <view class="menu-left">📜 关于岐黄智助手</view>
        <text class="menu-arrow">〉</text>
      </view>

      <button class="menu-item feedback-btn" open-type="feedback" hover-class="item-hover">
        <view class="menu-left">🎧 意见反馈与咨询</view>
        <text class="menu-arrow">〉</text>
      </button>

      <view class="menu-item" bindtap="showCleanCache" hover-class="item-hover">
        <view class="menu-left">🧹 清除本地缓存</view>
        <text class="menu-arrow">〉</text>
      </view>
    </view>

    <view class="logout-wrap">
      <button class="btn-logout" bindtap="handleLogout">退出当前登录</button>
    </view>
  </block>

  <block wx:else>
    <view class="login-guide">
      <view class="brand-logo">🌿</view>
      <text class="brand-name">岐黄智助手</text>
      
      <button class="btn-login" bindtap="handleLogin">一键健康登录</button>
      
      <view class="protocol-box" bindtap="navToAbout">
        <text class="protocol-text">登录即代表同意</text>
        <text class="protocol-link">《用户协议》</text>
        <text class="protocol-text">和</text>
        <text class="protocol-link">《隐私政策》</text>
      </view>
    </view>
  </block>
</view>